<micro:CaliburnApplication
    x:Class="TestCaliburnMicro.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:micro="using:Caliburn.Micro"
    >

    <micro:CaliburnApplication.Resources>
        <Style x:Key="Level1Style" TargetType="Panel">
            <Setter Property="Background" Value="#111111" />
        </Style>
        <Style x:Key="Level2Style" TargetType="Panel">
            <Setter Property="Background" Value="#222222" />
        </Style>
        <Style x:Key="Level3Style" TargetType="Panel">
            <Setter Property="Background" Value="#333333" />
        </Style>
        <Style x:Key="H1Style" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30" />
        </Style>
    </micro:CaliburnApplication.Resources>
</micro:CaliburnApplication>
